<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/shape_bottom_dialog">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_bottom_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <View
        android:id="@+id/dialog_bottom_cancel_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <TextView
        android:id="@+id/dialog_bottom_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="取消"
        android:gravity="center"
        android:background="@drawable/select_bottom_item_default"/>
</LinearLayout>
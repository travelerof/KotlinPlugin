<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_common_bottom_title_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="测试"
        android:textColor="#333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/dialog_common_bottom_title_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5" />

    <FrameLayout
        android:id="@+id/dialog_common_bottom_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_common_bottom_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="#888888"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:id="@+id/dialog_common_bottom_message_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5" />
    <LinearLayout
        android:id="@+id/dialog_common_bottom_b_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_common_bottom_b_negative_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/selector_negative_text"
            android:gravity="center"
            android:text="取消"/>
        <View
            android:id="@+id/dialog_common_bottom_b_negative_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/dialog_common_bottom_b_positive_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/selector_positive_text"
            android:gravity="center"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>